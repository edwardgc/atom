<rpc xmlns="urn:ietf:params:xml:ns:netconf:base:1.0" message-id="1">
  <edit-config>
    <target>
      <running/>
    </target>
    <config>

      <forwarding xmlns="urn:bbf:yang:bbf-l2-forwarding">
        <flooding-policies-profiles>
          <flooding-policies-profile>
            <name>flood1</name>
            <flooding-policy>
              <name>fp1</name>
              <in-interface-usages>
                <interface-usages>network-port</interface-usages>
              </in-interface-usages>
              <destination-address>
                <unicast-address/>
              </destination-address>
              <out-interface-usages>
                <interface-usages>subtended-node-port</interface-usages>
              </out-interface-usages>
            </flooding-policy>
            <flooding-policy>
              <name>fp2</name>
              <in-interface-usages>
                <interface-usages>network-port</interface-usages>
              </in-interface-usages>
              <destination-address>
                <broadcast-address/>
              </destination-address>
              <out-interface-usages>
                <interface-usages>subtended-node-port</interface-usages>
                <interface-usages>user-port</interface-usages>
              </out-interface-usages>
            </flooding-policy>
            <flooding-policy>
              <name>fp3</name>
              <in-interface-usages>
                <interface-usages>network-port</interface-usages>
              </in-interface-usages>
              <destination-address>
                <ipv4-prefix>224.0.0.0/24</ipv4-prefix>
              </destination-address>
              <out-interface-usages>
                <interface-usages>subtended-node-port</interface-usages>
              </out-interface-usages>
            </flooding-policy>
            <flooding-policy>
              <name>fp4</name>
              <in-interface-usages>
                <interface-usages>network-port</interface-usages>
              </in-interface-usages>
              <destination-address>
                <ipv4-multicast-address/>
              </destination-address>
              <discard/>
            </flooding-policy>
          </flooding-policies-profile>
        </flooding-policies-profiles>

        <split-horizon-profiles>
          <split-horizon-profile>
            <name>no-u2u-uninni</name>
            <split-horizon>
              <in-interface-usage>user-port</in-interface-usage>
              <out-interface-usage>user-port</out-interface-usage>
              <out-interface-usage>subtended-node-port</out-interface-usage>
            </split-horizon>
            <split-horizon>
              <in-interface-usage>subtended-node-port</in-interface-usage>
              <out-interface-usage>user-port</out-interface-usage>
              <out-interface-usage>subtended-node-port</out-interface-usage>
            </split-horizon>
          </split-horizon-profile>
        </split-horizon-profiles>

        <forwarding-databases>
          <forwarding-database>
            <name>fdb1</name>
            <max-number-mac-addresses>1000</max-number-mac-addresses>
            <aging-timer>300</aging-timer>
            <mac-learning-control>
              <mac-learning-control-profile>no-mac-movement-uninni</mac-learning-control-profile>
              <generate-mac-learning-alarm>true</generate-mac-learning-alarm>
            </mac-learning-control>
          </forwarding-database>
          <forwarding-database>
            <name>fdb2</name>
            <max-number-mac-addresses>1000</max-number-mac-addresses>
            <aging-timer>300</aging-timer>
            <mac-learning-control>
              <mac-learning-control-profile>no-mac-movement-uninni</mac-learning-control-profile>
              <generate-mac-learning-alarm>true</generate-mac-learning-alarm>
            </mac-learning-control>
          </forwarding-database>
        </forwarding-databases>
      </forwarding>

    </config>
  </edit-config>
</rpc>
